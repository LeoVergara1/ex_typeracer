{{> header}}
<script src="/js/demoComponent.js"></script>
<div class="container">
<br>
<div class="row">
	<div class="col-lg-12">
			<h3 class="blue margin0">Administrador de Comisiones</h3>
	</div>

</div>
<hr>
<form action="/administration/updateComission" method="get">
<div class="row">
	<div class="col-lg-6">
			<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text" id="inputGroup-sizing-sm">Porcentaje de comisión promotor Coord. de Mercadotecnia</span>
					</div>
					<input type="number" pattern="[0-9]" name="comissionEjecutiva" min="0" max="99" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" value="{{comissionEjecutiva}}">
				</div>
	</div>
	<div class="col-lg-6">
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
			<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text" id="inputGroup-sizing-sm">Porcentaje de comisión promotor</span>
					</div>
					<input type="number" pattern="[0-9]" name="comissionCordinacion" min="0" max="99" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" value="{{comissionCordinacion}}">
				</div>
	</div>
	<div class="col-lg-6">
			<button type="submit" class="btn btn-primary" role="button">Actualizar</button>
	</div>
</div>
</form>
<div class="row">

	<div class="col-lg-12">
			<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Campus</th>
							<th scope="col">Cuota Fija</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{{#comisionesList}}
						<form action="/administration/updateCuotaFija" method="get">
							<tr>
								<th scope="row">{{campusDesc}}</th>
								<td>
									<input type="number" name="cuotaFija" value="{{cuotaFija}}" class="form-control" id="cuotaFija">
								</td>
								<td>
									<input id="id" value="{{id}}" name="id" type="hidden">
									<button type="submit" class="btn btn-primary" role="button">Actualizar</button>
								</td>
							</tr>
						</form>
						{{/comisionesList}}
					</tbody>
				</table>
	</div>
</div>
</div>
<script src="/js/index.js"></script>
{{> footer}}