{{> header}}
<script src="/js/demoComponent.js"></script>
<div class="container">
<br>
<div class="row">
	<div class="col-lg-12">
			<h3 class="blue margin0">Administrador de Comisiones</h3>
	</div>

</div>
<hr>
<div class="row">
	<div class="col-lg-6">
			<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text" id="inputGroup-sizing-sm">Porcentaje de comisión promotor Coord. de Mercadotecnia</span>
					</div>
					<input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" value="{{comissionEjecutiva}}">
				</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
			<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text" id="inputGroup-sizing-sm">Porcentaje de comisión promotor</span>
					</div>
					<input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm" value="{{comissionCordinacion}}">
				</div>
	</div>
</div>
<div class="row">

	<div class="col-lg-12">
			<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Campus</th>
							<th scope="col">Comision</th>
							<th scope="col">Cuota Fija</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{{#comisionesList}}
						<tr>
							<th scope="row">{{campusDesc}}</th>
							<td>{{comisionCoordinacion}}</td>
							<td>{{cuotaFija}}</td>
							<td><button name="" id="" class="btn btn-primary" role="button" @click="update({{cuotaFija}})">Actualizar</button></td>
						</tr>
						{{/comisionesList}}
					</tbody>
				</table>
	</div>
</div>
</div>
<script src="/js/index.js"></script>
{{> footer}}